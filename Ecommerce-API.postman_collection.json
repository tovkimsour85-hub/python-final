          "name": "Add to Cart",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{access_token}}", "type": "string" }] },
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_id\": 1,\n  \"qty\": 2\n}"
            },
            "url": "{{base_url}}/api/front/add-to-cart"
