{
  "info": {
    "name": "Ecommerce API",
    "description": "Flask Ecommerce API - Customer & Admin endpoints. Set {{access_token}} after Login or Admin login.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:5000" },
    { "key": "access_token", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/health"
          }
        }
      ]
    },
    {
      "name": "Front - Public",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": "{{base_url}}/api/front/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": "{{base_url}}/api/front/login"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"new_password\": \"newpass123\"\n}"
            },
            "url": "{{base_url}}/api/front/reset-password"
          }
        },
        {
          "name": "Get Category List",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/front/category-list"
          }
        },
        {
          "name": "Get Products by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/front/category-list/1"
          }
        },
        {
          "name": "Get Product List",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/front/product-list"
          }
        }
      ]
    },
    {
      "name": "Front - Auth Required",
      "item": [
        {
          "name": "Me (current user)",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{access_token}}", "type": "string" }] },
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/front/me"
          }
        },
        {
          "name": "Logout",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{access_token}}", "type": "string" }] },
